PImage elonmusk;

void setup() {
  size(858, 536);
  elonmusk = loadImage("105439429-1536353186931screen-shot-2018-09-07-at-4.45.51-pm.jpg");
  background(0);
}

void draw() {

  for (int i = 0; i < 500; i++) {
    float x = random(width);
    float y = random(height);
    color c = elonmusk.get(int(x), int(y));
    fill(c, 25);
    noStroke();
    ellipse(x, y, 16, 16);
  }
    if(mouseX >100){
      background(255,500,0);
    } 
  }
